<h2> Order List </h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Created_at</th>
      <th>The one who order</th>
      <th>Order State</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td> <%= link_to(order.id, admin_order_path(order) ) %> </td>
      <td> <%= order.created_at.to_s(:long) %> </td>
      <td> <%= order.user.name %></td>
      <td> <%= order.aasm_state %> </td>
    </tr>
    <% end %>

  </tbody>
</table>
