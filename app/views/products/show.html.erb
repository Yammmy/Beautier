<div class="row" style="margin-top: 50px;">
  <div class="pull-left" style="margin-left: 50px;">
    <% if @product.image.present? %>
      <%= image_tag(@product.image.medium.url, class: "thumbnail") %>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>
  <div class="pull-right" style="margin-right: 50px;">
    <h2> <%= @product.title %> </h2>
    <div style="height:100px;">
      <p>
        <%= @product.description %>
      </p>
    </div>
    <div> Quantity: <%= @product.quantity %> </div>
    <div class="product-price"> Price: ï¿¥ <%= @product.price %> </div>
    <div class="pull-right">
      <% if @product.quantity.present? && @product.quantity > 0 %>
        <%= link_to("Add to cart", add_to_cart_product_path(@product),method: :post, :class => "btn btn-primary btn-lg btn-danger") %>
      <% else %>
        <div class="btn btn-log btn-danger">
          Sorry, the products are all sold out!
        </div>
      <% end %>
    </div>
  </div>
</div>
